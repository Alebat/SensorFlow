<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="m.start()"
        android:onClick="onMStart" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Ciao"
        android:onClick="onAddText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Ugo"
        android:onClick="onAddText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add 646476$%&amp;"
        android:onClick="onAddText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="m.close()"
        android:onClick="onMClose" />

    <Button
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:text="onBTDStart"
        android:onClick="onBTDStart"
        android:layout_weight="0.20" />

    <Button
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:text="onBTDClose"
        android:onClick="onBTDClose"
        android:layout_weight="0.20" />

</LinearLayout>
